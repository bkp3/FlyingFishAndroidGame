<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".GameOverActivity">

    <TextView
        android:id="@+id/game_over"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="80dp"
        android:text="Game Over"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        android:textSize="70dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/play_again_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_over"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="Play Again"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/display_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play_again_btn"
        android:text="Score"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="50dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/developer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_score"
        android:text="Developed by:-"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/bkprajapati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/developer"
        android:text="BK Prajapati"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="25dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/bkp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bkprajapati"
        android:text="bkp399"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="25dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>


</RelativeLayout>